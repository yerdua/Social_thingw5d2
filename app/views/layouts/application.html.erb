<!DOCTYPE html>
<html>
	<head>
	  <title>SocialThing</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<%= yield %>
		<%= current_user %>
		<% if current_user %>
			<%= button_to "Sign out" , session_url, :method => :delete %>
		<% else %>
			<%= link_to "Sign in", new_session_url %>
		<% end %>
	</body>
</html>

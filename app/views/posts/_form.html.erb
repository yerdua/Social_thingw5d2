<% action_url = (method == :post) ? posts_url : post_url(@post) %>

<form action="<%= action_url %>" method="post" accept-charset="utf-8">
	<input
	    type="hidden"
	    name="_method"
	    value="<%= method %>">

	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>">
	<p>
	<label for="post_title">Title</label>
	<input type="text"
				 name="post[title]"
				 value="<%= @post.title %>"
				 id="post_title">
	</p>

	<p>
	 	<label for="post_body">Body</label>
	 	<textarea name="post[body]" id="post_body"><%= @post.body %></textarea>
	</p>
  
  <p>
    Links!
    <% 3.times do |i| %>
      <label for="link_<%= i %>_url">link_<%= i %></label>
      <input type="text"
             name="post[links_attributes][<%= i %>][url]"
             value="<%= @post.links[i].url if @post.links[i] %>" 
             id="link_<%= i %>_url">
    <% end %>
    
  </p>


	<p>
    Share with:
		<ul>
			<% @circles.each do |circle|%>
				<li>
					<input type="checkbox",
								 name="post[friend_circle_ids][]"
								 value="<%= circle.id %>"
								 id="post_friend_circle_ids_<% circle.id %>"
								 <%= 'checked' if @post.friend_circle_ids.include?(circle.id) %>>
					<label for="post_friend_circle_ids_<% circle.id %>"><%= circle.name %></label>
				</li>
			<% end %>
		</ul>
	</p>

		<ul>


	<p><input type="submit" value="<%= button_value %>"></p>
</form>